        @*<select id="test">
            <option value="-1">Seleccionar</option>
            @for (int i = 0; i < @ViewBag.Lista.Count; i++)
            {
                <option value="@i">@ViewBag.Lista[i]</option>
            }
        </select>*@
    </form>
</div>

<script src="https://code.jquery.com/jquery-1.12.4.js"></script>
<script src="https://code.jquery.com/ui/1.12.1/jquery-ui.js"></script>


<!--autocomplete-->
<script>


    $(function () {

        var availableTags = [
           @foreach (var item in @ViewBag.Lista)
           {
               <text > { label: "@item.Item2", value: "@item.Item1" },</text>

        }
        ];

        $("#tags").autocomplete({
            source: availableTags,
            select: function (event, ui) {
                var id = ui.item.value;
                var name = ui.item.label;
                $("#tags").val(name);
                $("#tags").attr["selec"] = id;
                return false;
            },

            focus: function (event, ui) {
                event.preventDefault();
                $("#tags").val(ui.item.label);
            }

        });
    });
</script>





<input type="button" value="SIGUIENTE!" onclick="location.href='@Url.Action("ResultadoBusqueda", "ResultadoBusqueda")?id=' + $('#tags').attr['selec']" />