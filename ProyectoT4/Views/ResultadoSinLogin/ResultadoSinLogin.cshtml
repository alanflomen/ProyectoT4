
@model ProyectoT4.Models.JuegosMatch

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <style>
        /*Styles de el popup*/

        .modalDialog {
            position: fixed;
            font-family: Arial, Helvetica, sans-serif;
            top: 0;
            right: 0;
            bottom: 0;
            left: 0;
            background: rgba(0,0,0,0.8);
            z-index: 99999;
            opacity: 0;
            -webkit-transition: opacity 400ms ease-in;
            -moz-transition: opacity 400ms ease-in;
            transition: opacity 400ms ease-in;
            pointer-events: none;
        }

            .modalDialog:target {
                opacity: 1;
                pointer-events: auto;
            }

            .modalDialog > div {
                width: 400px;
                position: relative;
                margin: 10% auto;
                padding: 5px 20px 13px 20px;
                border-radius: 10px;
                background: #c6cc5c;
            }

        .close {
            background: #606061;
            color: #FFFFFF;
            line-height: 25px;
            position: absolute;
            right: -12px;
            text-align: center;
            top: -10px;
            width: 24px;
            text-decoration: none;
            font-weight: bold;
            -webkit-border-radius: 12px;
            -moz-border-radius: 12px;
            border-radius: 12px;
            -moz-box-shadow: 1px 1px 3px #000;
            -webkit-box-shadow: 1px 1px 3px #000;
            box-shadow: 1px 1px 3px #000;
        }

            .close:hover {
                background: #00d9ff;
            }
        /*Styles de el image align*/
        * {
            box-sizing: border-box;
        }

        .column {
            float: left;
            width: 33.33%;
            padding: 5px;
        }

        /* Clearfix (clear floats) */
        .row::after {
            content: "";
            clear: both;
            display: table;
    </style>

    <title>ResultadoSinLogin</title>
</head>
<body>
    <h2>Cantidad de usuarios con el @Model.Titulo: @Model.UsuariosMatch.Count()</h2>
    <div class="row">

        @{
                int num = 1;
                foreach (var user in @Model.UsuariosMatch)
                {
            <div class="column">
                
               
                <a href="?idJuego=@Model.IdJuego#@num">
                    <img src="@user.UrlFoto" style="width:50%">
                </a>
                <br>
                <a href=#@num>Ver Opciones → @Model.Titulo</a>
                <div id=@num class="modalDialog">
                    <div>
                        <a href="#close" title="Cerrar" class="close">X</a>
                        <h2>Posible propuesta: </h2>
                        <p><strong>Usuario: xxxx</strong></p>
                        <p><strong>Rating: @user.rating</strong></p>
                        @Html.Label("E-Mail: ")
                        <a href="mailto:xx@xx.com">xx@xx.com</a>
                        <br>
                        <br>
                        <button type="button" onclick="mensaje()" class="btn btn-primary">Realizar propuesta</button>
                        <button type="button" onclick="location.href='@Url.Action("Register", "Account" )'" class="btn btn-warning">Registrarme</button> <br> <br>
                        <br>
                    </div>
                    <br>
                </div>
            </div>

                num++;
            }
        }
    </div>
</body>
</html>
<script>
    function mensaje() {
        alert("Registrate para poder intercambiar!");
    }
</script>
<script>
    //tecla escape
    document.addEventListener("keypress", function (event) {
        if (event.keyCode == 27) {
            window.history.back();
        }
    })
</script>